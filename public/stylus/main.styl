color_bg_one = #00A6BC
color_bg_two = #01BAE2
color_blanco = #ffffff

@font-face
    font-family 'bebas_neueregular'
    src url('../fonts/bebasneue-webfont.eot')
    src url('../fonts/bebasneue-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/bebasneue-webfont.woff') format('woff'),
         url('../fonts/bebasneue-webfont.ttf') format('truetype'),
         url('../fonts/bebasneue-webfont.svg#bebas_neueregular') format('svg')
    font-weight normal
    font-style normal

body
	background linear-gradient(270deg, color_bg_two, color_bg_one)

.container
	background url('../img/bg_body.jpg') center top no-repeat

.btn-begin, .btn-next
	background url('../img/bg_submit.png') no-repeat 0px -2px
	border none
	color #404041
	display inline-block
	font 1.65em bebas_neueregular
	line-height 1
	padding 13px 0
	width 165px
	&:hover
		text-decoration none

#content-frm
	padding 35px 10px
	background-color #F1F1F2

.push-left
	float left

.push-right
	float right

#content-post
	background url('../img/bg_post.png') no-repeat
	div
		margin 44px 0 40px 15px
	textarea
		resize none
		border-radius 0
		height 306px!important

.content-home
	padding-left 90px
	h1
		color color_blanco
		font bold italic 4.5em Arial
		text-shadow #767676 1px 1px 2px
		overflow hidden
		small
			color color_blanco
			display block
			float right
			font-weight bold
			line-height 1.2em
			margin-right 40px

.btn-black
	background-color #050505
	color color_blanco
	box-shadow #444343 3px 3px 4px
	&:hover
		text-decoration none
		color color_blanco

.mt20
	margin-top 20px

.mt10
	margin-top 10px

.mb20
	margin-bottom 20px

#socials a
	display inline-block
	margin-right 16px

.custom-tooltip
	background url('../img/arrow_tooltip.png') no-repeat 176px 9px
	left 30px
	padding-right 20px
	position absolute
	top -18px
	div
		background-color #FFF
		border-radius 8px
		color #231F20
		line-height 1.3em
		padding 6px 12px
		width 180px

.prelative
	position relative

.content-tooltip
	margin-top 54px

.form-control
	height 44px !important

.title-post
	color #FFF100
	margin-top 0
	text-shadow rgba(51, 51, 51, 0.82) 1px 1px 2px

#posts
	margin-top 24px
	li
		overflow hidden
		margin-bottom 18px
	p
		background-color #F0F0F1
		border-radius 6px
		cursor pointer
		font-size .9em
		margin-bottom 0
		padding 6px
		text-align left
	.post-content
		background url('../img/arrow_posts.png') no-repeat right 38px
		display inline-block
		max-width 204px
		min-width 170px
		padding-right 10px
	img
		margin-left 6px
		width 68px

#content-btn-finish
	margin-top -18px

#img_compartir
	margin 0 auto

.bg-video
	background-color #000
	height 170px
	left 39px
	max-width 270px
	position absolute
	right 0
	top 16px

.premios
	background url('../img/premios.png') no-repeat left center

#fb-select-friends
	margin-top 28px
	margin-bottom 20px

.wp
	white-space nowrap

.fs9
	font-size .9em !important

.mt12
	margin-top 12px

#modal-show-post .modal-body
	p
		max-height 300px
		overflow auto