color_bg_one = #00A6BC
color_bg_two = #01BAE2
color_blanco = #ffffff

@font-face
    font-family 'bebas_neueregular'
    src url('../fonts/bebasneue-webfont.eot')
    src url('../fonts/bebasneue-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/bebasneue-webfont.woff') format('woff'),
         url('../fonts/bebasneue-webfont.ttf') format('truetype'),
         url('../fonts/bebasneue-webfont.svg#bebas_neueregular') format('svg')
    font-weight normal
    font-style normal

body
	background linear-gradient(270deg, color_bg_two, color_bg_one)

.container
	background url('../img/bg_body.jpg') center top no-repeat

.btn-begin, .btn-next
	background url('../img/bg_submit.png') no-repeat 0px -2px
	border none
	color #404041
	display inline-block
	font 1.65em bebas_neueregular
	line-height 1
	padding 13px 0
	width 165px
	&:hover
		text-decoration none

#content-frm
	padding 35px 10px
	background-color #F1F1F2

.push-left
	float left

.push-right
	float right

#content-post
	background url('../img/bg_post.png') no-repeat
	div
		margin 44px 0 40px 15px
	textarea
		resize none
		border-radius 0
		height 306px

.content-home
	padding-left 90px
	h1
		color color_blanco
		font bold italic 4.5em Arial
		text-shadow #767676 1px 1px 2px
		overflow hidden
		small
			color color_blanco
			display block
			float right
			font-weight bold
			line-height 1.2em
			margin-right 40px

.btn-black
	background-color #050505
	color color_blanco
	box-shadow #444343 3px 3px 4px
	&:hover
		text-decoration none
		color color_blanco

.mt20
	margin-top 20px

.mt10
	margin-top 10px

.mb20
	margin-bottom 20px

#socials a
	display inline-block
	width 84px
	height 85px
	background url('../img/socials.png') no-repeat
	margin-right 16px

#yt
	background-position -100px 0px !important

.custom-tooltip
	position absolute
	padding-right 20px
	top -18px
	left 30px
	background url('../img/arrow_tooltip.png') no-repeat 176px 9px
	div
		background-color #FFF
		width 180px
		border-radius 8px
		padding 6px 12px
		color #231F20
		line-height 1.3em

.prelative
	position relative

.content-tooltip
	margin-top 54px

.form-control
	height 44px !important